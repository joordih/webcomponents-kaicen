{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2023",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "sourceMap": true,
    "outDir": "dist",
  },
  "paths": {
    "@/*": ["src/*"],
    "@routes/": ["src/routes/*"],
    "@controllers/": ["src/controllers/*"],
    "@models/": ["src/models/*"],
  },
  "lib": ["ES2023"],
  
}